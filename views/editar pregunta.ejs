<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="./editar pregunta.css" />
        <link rel="stylesheet" href="./barra lateral.css" />
        <link rel="stylesheet" href="./Roca Regular.ttf" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>AnkiQuestions Editar/Agregar</title>
    </head>
    <body>
        <main>

            <%- include("./barra lateral") %>


            <div id="app">
                <div class="crearEditar">

                    <div class="lostitulos">
                        <div class="primerT"><h2>Crear</h2></div>
                        <div class="relleno"></div>
                        <div class="segundoT"><h2>Editar</h2></div>
                    </div>

                    <form method="POST" action="/agregarPregunta" class="crear" id="crearForm">
                        <textarea name="preguntacrear" class="crearPregunta" required></textarea>
                        <textarea name="respuestacrear" class="crearRespuesta" required></textarea>
                        <select class="crearCategoriasYaExistentes"></select>
                        <input name="categoriacrear" type="text" class="crearNuevaCategoria" required/>
                        <button type="submit" class="crearsubmit">Crear</button>
                    </form>

                    <form method="POST" action="/updatepregunta" class="editar" id="editForm">
                        <input type="number" class="editarNumId" name="numId" required/>
                        <button type="button" class="editarBuscarId">Buscar</button>
                        <textarea type="text" name="preguntaseditar" id="lapregunta" class="editarPregunta" required></textarea>
                        <textarea type="text" name="respuestaeditar" class="editarRespuesta" required></textarea>
                        <select class="editarCategoriaYaExistente"></select>
                        <input type="text" name="categoriaeditar" class="editarNuevaCategoria" required />
                        <button type="submit" class="editarsubmit">Editar</button>
                    </form>

                </div>
            </div>

        </main>
        <script src="barra lateral.js"></script>
        <script src="editar pregunta.js"></script>
    </body>
</html>